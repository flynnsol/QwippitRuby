<!DOCTYPE html>
<html class="is-dark-bg-color">
  <head>
    <title>Qwippit</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('logo.png') %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_importmap_tags %>
    <%= content_for :head do %>
      <%= javascript_import_module_tag "local-time.js" %>
    <% end %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <div class="navbar fixed is-dark-bg-highlight">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <%= image_tag "logo.png", class: "" %>
          <h1 class="title is-5">Qwippit</h1>
        <% end %>
        <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
          <span aria-hidden="true" class="is-main-font-color"></span>
          <span aria-hidden="true" class="is-main-font-color"></span>
          <span aria-hidden="true" class="is-main-font-color"></span>
        </a>
      </div>
      <div id="navMenu" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped">
            <p class="control">
              <%= link_to 'New Qwipp', new_qwipp_path, class: "button is-borderless is-button-color is-button-font-color" %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
