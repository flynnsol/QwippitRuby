<div class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">
        <h2 class="title is-2 is-main-font-color">
          Sign Up
        </h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control is-main-font-color">
              <%= f.input :name,
                          required: true,
                          label: "Name",
                          autofocus: true,
                          input_html: { autocomplete: "name", class:"input is-rounded is-dark-bg-highlight is-main-font-color" }, wrapper: false, label_html: { class: "fa fa-user" } %>
            </div>
          </div>
          <div class="field">
            <div class="control is-main-font-color">
              <%= f.input :username,
                          required: true,
                          label: "Username",
                          autofocus: true,
                          input_html: { autocomplete: "username", class:"input is-rounded is-dark-bg-highlight is-main-font-color" }, wrapper: false, label_html: { class: "fa fa-at" } %>
            </div>
          </div>
          <div class="field">
            <div class="control is-main-font-color">
              <%= f.input :email,
                          required: true,
                          label: "Email",
                          autofocus: true,
                          input_html: { autocomplete: "email", class:"input is-rounded is-dark-bg-highlight is-main-font-color" }, wrapper: false, label_html: { class: "fa fa-envelope" } %>
            </div>
          </div>
          <div class="field">
            <div class="control is-main-font-color">
              <%= f.input :password,
                          required: true,
                          label: "Password",
                          placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class:"input is-rounded is-dark-bg-highlight is-main-font-color" }, wrapper: false, label_html: { class: "fa fa-lock" } %>
            </div>
          </div>
          <div class="field">
            <div class="control is-main-font-color">
              <%= f.input :password_confirmation,
                          required: true,
                          label: "Confirm Password",
                          input_html: { autocomplete: "new-password", class:"input is-rounded is-dark-bg-highlight is-main-font-color" }, wrapper: false, label_html: { class: "fa fa-lock" } %>
            </div>
          </div>
          <%= f.button :submit, "Sign Up", class: "button is-button-color is-button-font-color" %><br/><br/>
          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

